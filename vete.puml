class Cliente{
    -nombre:String
    -apellidos:String
    -dni:String
    -fechaNacimiento:Date
    -telefono:String
    -email:String

}

class Mascota{
    -nombre:String
    -raza:String
    -fechaNacimiento:Date
    -sexo:String
    -peso:Double
    -altura:Double
    -color:String
    -chip:String
