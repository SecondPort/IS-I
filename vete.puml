}

class Consulta{
    -tiempoConsulta:Date
    -profesional:Profesional
    -animalTratado:Mascota
    -importe:Double
    -resolucion:String
    -recetas:String
}

class Profesional{
    -nombre:String
    -apellidos:String
    -dni:String
    -fechaNacimiento:Date
    -telefono:String
    -email:String
}

class Camara{
    -id:String
    -estado:String
    -animal:Mascota
}

class GestorContenidos{
    -id:String
    -recetas:String
    -documentos:String


class Pago{
    -id:String
    -fecha:Date
    -importe:Double
    -recargo:Double
